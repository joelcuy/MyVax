<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView_popupAdminister_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm that patient has been vaccinated?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="22sp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/imageView_popupAdminister_profile"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_title" />

    <TextView
        android:id="@+id/textView_popupAdminister_displayText_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Full Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_popupAdminister_profile" />

    <TextView
        android:id="@+id/textView_popupAdminister_value_fullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Loading..."
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/textView_popupAdminister_displayText_fullName"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_displayText_fullName" />

    <TextView
        android:id="@+id/textView_popupAdminister_displayText_vaccineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Vaccine Name"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_popupAdminister_displayText_fullName"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_value_fullName" />

    <TextView
        android:id="@+id/textView_popupAdminister_value_vaccineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Loading..."
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/textView_popupAdminister_displayText_fullName"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_displayText_vaccineName" />

    <TextView
        android:id="@+id/textView_popupAdminister_displayText_batchNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Batch Number"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_popupAdminister_displayText_fullName"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_value_vaccineName" />

    <TextView
        android:id="@+id/textView_popupAdminister_value_batchNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Loading..."
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/textView_popupAdminister_displayText_fullName"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_displayText_batchNo" />

    <!--Right side textViews    -->
    <TextView
        android:id="@+id/textView_popupAdminister_displayText_ICPassport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="IC/Passport"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_popupAdminister_profile" />

    <TextView
        android:id="@+id/textView_popupAdminister_value_ICPassport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Loading..."
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/textView_popupAdminister_displayText_ICPassport"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_displayText_ICPassport" />

    <TextView
        android:id="@+id/textView_popupAdminister_displayText_manufacturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Manufacturer"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_popupAdminister_displayText_ICPassport"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_value_ICPassport" />

    <TextView
        android:id="@+id/textView_popupAdminister_value_manufacturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Loading..."
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/textView_popupAdminister_displayText_ICPassport"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_displayText_manufacturer" />

    <TextView
        android:id="@+id/textView_popupAdminister_displayText_expiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Expiry Date"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_popupAdminister_displayText_ICPassport"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_value_manufacturer" />

    <TextView
        android:id="@+id/textView_popupAdminister_value_expiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Loading..."
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/textView_popupAdminister_displayText_ICPassport"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_displayText_expiryDate" />

    <EditText
        android:id="@+id/editText_popupAdminister_remarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Remarks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_popupAdminister_value_batchNo" />

    <Button
        android:id="@+id/button_popupAdminister_administer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:text="Administer Vaccine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_popupAdminister_remarks" />



</androidx.constraintlayout.widget.ConstraintLayout>